<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/zorionLightestGray" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ripple animation on pressing the button -->

    <item android:id="@android:id/mask">

        <inset android:inset="4dp">

            <shape>

                <solid android:color="@color/white" />
                <corners android:topRightRadius="8dp" android:bottomLeftRadius="8dp" />

            </shape>

        </inset>

    </item>

    <item android:id="@android:id/background">

        <layer-list>

            <item>

                <shape>

                    <gradient android:startColor="@color/zorionDarkAqua" android:endColor="@color/zorionAqua" />
                    <corners android:topRightRadius="10dp" android:bottomLeftRadius="10dp" />

                </shape>

            </item>

            <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">

                <shape>

                    <solid android:color="@color/zorionDarkGray" />
                    <corners android:topRightRadius="10dp" android:bottomLeftRadius="10dp" />

                </shape>

            </item>

        </layer-list>

    </item>

</ripple>