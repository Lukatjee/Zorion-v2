<?xml version="1.0" encoding="utf-8"?>

<ripple android:color="@color/zorionLightestGray" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ripple animation on pressing the button -->

    <item android:id="@android:id/mask">

        <inset android:inset="1dp">

            <shape>

                <solid android:color="@color/white" />

            </shape>

        </inset>

    </item>

    <item android:id="@android:id/background">

        <layer-list >

            <item android:top="1dp" android:bottom="1dp">

                <shape>

                    <solid android:color="@color/zorionLightestGray" />

                </shape>

            </item>

            <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">

                <shape>

                    <solid android:color="@color/zorionDarkGray" />

                </shape>

            </item>

        </layer-list>

    </item>

</ripple>