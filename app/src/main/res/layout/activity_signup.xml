<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.Signup"

    android:background="@color/zorionGray"

    >

    <ScrollView

        android:id="@+id/signUpScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout

            android:id="@+id/signUpLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center_vertical"

            >

            <!-- Sign in title display using '@drawable/authentication_title.xml' and '@font/bubbler' for design -->

            <TextView

                android:id="@+id/signUpTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"

                android:text="@string/zorion_sign_up"
                android:textSize="64sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/bubbler"

                android:background="@drawable/authentication_title"

                />

            <!-- Username input using '@drawable/authentication_input', '@drawable/authentication_username' and '@font/asap' for design -->

            <EditText

                android:id="@+id/signUpUsernameEditText"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"

                android:layout_gravity="center_horizontal"

                android:drawableStart="@drawable/authentication_username"
                android:drawablePadding="5dp"

                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/asap"

                android:hint="@string/zorion_username"
                android:autofillHints=" "
                android:textColorHint="@color/zorionLighterGray"
                android:inputType="text"
                android:maxLength="16"

                android:background="@drawable/authentication_input"

                />

            <!-- Email input using '@drawable/authentication_input', '@drawable/authentication_email' and '@font/asap' for design -->

            <EditText

                android:id="@+id/signUpEmailEditText"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"

                android:layout_gravity="center_horizontal"

                android:drawableStart="@drawable/authentication_email"
                android:drawablePadding="5dp"

                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/asap"

                android:hint="@string/zorion_e_mail"
                android:autofillHints=" "
                android:textColorHint="@color/zorionLighterGray"
                android:inputType="textEmailAddress"
                android:maxLength="32"

                android:background="@drawable/authentication_input"

                />

            <!-- Password input using '@drawable/authentication_input', '@drawable/authentication_password' and '@font/asap' for design -->

            <EditText

                android:id="@+id/signUpPasswordEditText"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"

                android:layout_gravity="center_horizontal"

                android:drawableStart="@drawable/authentication_password"
                android:drawablePadding="5dp"

                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/asap"

                android:hint="@string/zorion_password"
                android:autofillHints=" "
                android:textColorHint="@color/zorionLighterGray"
                android:inputType="textPassword"
                android:maxLength="32"

                android:background="@drawable/authentication_input"

                />

            <!-- Sign up button using '@drawable/authentication_button' and '@drawable/authentication_arrow' for design -->

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/signUpButtonCircleImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:padding="8dp"

                android:layout_gravity="center_horizontal"

                android:src="@drawable/authentication_arrow"
                android:background="@drawable/authentication_button"

                />

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/signUpCircleImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"

                android:background="@drawable/authentication_button"

                android:padding="8dp"
                android:src="@drawable/authentication_loading"

                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>